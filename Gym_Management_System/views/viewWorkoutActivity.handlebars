<div class="main">
    <div class="container-fluid">

        <header>
            <h1>View Activity</h1>

        </header>

        <body>
            <form id="view-activity" action = "/viewWorkoutActivity" method="POST">
                  <label for="username">username</label><br>
                        <select id="username" name="username">
                             {{#each username}}
                            <option name ="user" value={{this._id}}>{{{this.username}}}</option>
                            {{/each}}
                        </select>       
                <button type="submit">viewWorkout</button>
            </form>
                {{#if flag}}
                <p class="error">{{error}}</p>

                {{/if}}
                
                
                    {{#if showactivities}}
                    <table name = "result" style="width:100%">
                    <tr >
                       
                        <th>ID</th>
                        <th>Level</th>
                        <th>Description</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Days</th>
                        <th>Activity</th>
                        <th>Sets</th>
                        <th>Weight</th>
                        <th>Repetitions</th>
                    </tr>
                    {{#each showactivities}}    
                     <tr name ="row">
                        <form method="POST" action="/updateWorkoutActivity"> 
                            <td ><input type="text" name="activityId" placeholder={{this._id}}  > </td>
                            <td><input  type="text" name="activitylevel" placeholder={{this.level}}  ></td>
                            <td><input  type="text"  name="activitydescription" placeholder={{this.description}} ></td>
                            <td><input   type="text"  name="activitystartdate" placeholder={{this.startdate}} ></td>
                            <td><input   type="text"  name="activityenddate" placeholder={{this.enddate}} ></td>
                            <td><input  type="text"  name="days" placeholder={{this.days}} ></td>
                            <td><input  type="text"  name="activity" placeholder={{this.activity}} ></td>
                            <td><input  type="text"  name="sets" placeholder={{this.sets}} ></td>
                            <td><input  type="text"  name="weight" placeholder={{this.weight}} ></td>
                            <td><input  type="text"  name="repetitions" placeholder={{this.repetitions}}  ></td>
                            <td><input type="submit" value="Update"></td>
                        </form>
                        <td>
                        <form method="POST" action="/deleteWorkoutActivity">
                            <input type="hidden" value={{this._id}} name="activityId"> 
                            <input type="submit" value="Delete">
                        </form>
                        </td>   
                        </tr>
                            {{/each}}
                </table>
                {{/if}}
                <br />
                <br />
                <p>{{message}}</p>
                <a href ="/workoutActivity">Go back</a>
          

        </body>
    </div>
</div>