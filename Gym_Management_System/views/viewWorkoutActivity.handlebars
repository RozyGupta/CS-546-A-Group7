<div class="main">
    <div class="container-fluid">

        <header>
            <h1>View Activity</h1>

        </header>

        <body>
            <form id="view-activity" action = "/viewWorkoutActivity" method="POST">
                  <label for="username">username</label><br>
                        <select id="username" name="username">
                             {{#each username}}
                            <option name ="user" value={{this._id}}>{{{this.username}}}</option>
                            {{/each}}
                        </select>       
                <button type="submit">viewWorkout</button>
            </form>
                {{#if flag}}
                <p class="error">{{error}}</p>

                {{/if}}
                
                
                    {{#if showactivities}}
                    <table name = "result" style="width:100%">
                    <tr >
                       
                        <th>ID</th>
                        <th>Level</th>
                        <th>Description</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Days</th>
                        <th>Activity</th>
                        <th>Sets</th>
                        <th>Weight</th>
                        <th>Repetitions</th>
                    </tr>
                    {{#each showactivities}}
                     <tr name ="row">
                        
                        <td contenteditable = "true">{{this._id}}</td>
                        <td contenteditable = "true">{{this.level}}</td>
                        <td contenteditable = "true">{{this.description}}</td>
                        <td contenteditable = "true">{{this.startdate}}</td>
                        <td contenteditable = "true">{{this.enddate}}</td>
                        <td contenteditable = "true">{{this.days}}</td>
                        <td contenteditable = "true">{{this.activity}}</td>
                        <td contenteditable = "true">{{this.sets}}</td>
                        <td contenteditable = "true">{{this.weight}}</td>
                        <td contenteditable = "true">{{this.repetitions}}</td>
                        <td contenteditable = "true"><form method="POST" action="/deleteWorkoutActivity"> 
                        <input type="hidden" value={{this._id}} name="activityId"> 
                        <input type="submit" value="Delete">
                        </form></td>   
                         <td><form method="POST" action="/updateWorkoutActivity"> 
                        <input type="hidden" value={{this._id}} name="activityId"> 
                        <input type="hidden" value={{this.level}} name="activitylevel"> 
                        <input type="hidden" value={{this.description}} name="activitydescription"> 
                        <input type="hidden" value={{this.startdate}} name="activitystartdate"> 
                        <input type="hidden" value={{this.enddate}} name="activityenddate"> 
                        <input type="hidden" value={{this.days}} name="activitydays"> 
                        <input type="hidden" value={{this.activity}} name="activity"> 
                        <input type="hidden" value={{this.sets}} name="activitysets"> 
                        <input type="hidden" value={{this.weight}} name="activityweight"> 
                        <input type="hidden" value={{this.repetitions}} name="activityrepetitions"> 
                        <input type="submit" value="Update">
                        </form></td>           
                    </tr> 
                    {{/each}}
                </table>
                {{/if}}
                <br />
                <br />
                <p>{{message}}</p>
                <a href ="/workoutActivity">Go back</a>
          

        </body>
    </div>
</div>