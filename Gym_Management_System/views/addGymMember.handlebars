<div class="content">
   <div class="container-fluid">
      <div class="jumbotron" id="head-doc">
         <header>
            <h1>Add Stats for Gym Member</h1>
         </header>
         <form id="createMember-form" action="/gymMember/add" method="POST">
            {{#if alertMsg}}
            <p class="alertMsg">{{alertMsg}}</p>
            {{/if }}
     
      <div id="inputDiv">
         <label for="membername">Select Member</label>
         <select id="membername" name="membername" required>
            <option value="" <option value="" selected disabled hidden></option>></option>
            {{#each membernames}}
            <option name="membername" value={{this.username}}>{{this.username}}</option>
            {{/each}}
         </select>
      </div>
      <div id="inputDiv">
         <label for="memberheight"> Height(metres)</label><br>
         <input class="major" type="number" name="memberheight" step="0.01" min="0" required />
      </div>
      <div id="inputDiv">
         <label for="memberweight"> Weight(kg)</label><br>
         <input class="major" type="number" name="memberweight" step="0.001" min="0" required />
      </div>
      <div class="centered">
         <div class="row">
            <div class="col-sm-6"><input type="submit" value="Create Member"></div>
            <div class="col-sm-6"> <input type="button" onclick="window.location.href='/gymMember'" id="cancel" value="Cancel"></div>
         </div>
      </div>
      </form>
   </div>
    </div>
</div>
</div>